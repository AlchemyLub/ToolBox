<Project>

  <PropertyGroup>
    <CustomTasksFolder>$(MSBuildThisFileDirectory)..\tasks\$(TargetFramework)</CustomTasksFolder>
    <CustomTasksAssembly>$(CustomTasksFolder)\$(MSBuildThisFileName).dll</CustomTasksAssembly>
  </PropertyGroup>

  <PropertyGroup>
    <SettingsNamespaceName Condition="'$(SettingsNamespaceName)' == ''">$(MSBuildProjectName).Generated</SettingsNamespaceName>
    <SettingsClassName Condition="'$(SettingsClassName)' == ''">AppSettingsKeys</SettingsClassName>
    <SettingsProjectDir Condition="'$(SettingsProjectDir)' == ''">$(MSBuildProjectDirectory)</SettingsProjectDir>
  </PropertyGroup>

  <UsingTask TaskName="SettingsCodeGenTask" AssemblyFile="$(CustomTasksAssembly)" />

</Project>
